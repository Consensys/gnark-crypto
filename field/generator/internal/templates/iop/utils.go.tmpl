// exp functions until 5

func exp0(x {{ .ElementType }}) {{ .ElementType }} {
	var res {{ .ElementType }}
	res.SetOne()
	return res
}

func exp1(x {{ .ElementType }}) {{ .ElementType }} {
	return x
}

func exp2(x {{ .ElementType }}) {{ .ElementType }} {
	return *x.Square(&x)
}

func exp3(x {{ .ElementType }}) {{ .ElementType }} {
	var res {{ .ElementType }}
	res.Square(&x).Mul(&res, &x)
	return res
}

func exp4(x {{ .ElementType }}) {{ .ElementType }} {
	x.Square(&x).Square(&x)
	return x
}

func exp5(x {{ .ElementType }}) {{ .ElementType }} {
	var res {{ .ElementType }}
	res.Square(&x).Square(&res).Mul(&res, &x)
	return res
}

// doesn't return any errors, it is a private method, that
// is assumed to be called with correct arguments.
func smallExp(x {{ .ElementType }}, n int) {{ .ElementType }} {
	if n == 0 {
		return exp0(x)
	}
	if n == 1 {
		return exp1(x)
	}
	if n == 2 {
		return exp2(x)
	}
	if n == 3 {
		return exp3(x)
	}
	if n == 4 {
		return exp4(x)
	}
	if n == 5 {
		return exp5(x)
	}
	return {{ .ElementType }}{}
}
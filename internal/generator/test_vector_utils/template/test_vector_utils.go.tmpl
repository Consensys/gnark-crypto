func (m *ElementMap) FindPair(x *{{.ElementType}}, y *{{.ElementType}}) ({{.ElementType}}, error) {

	toFind := ElementTriplet{
		key1:        *x,
		key2Present: y != nil,
	}

	if y != nil {
		toFind.key2 = *y
	}

	return m.find(&toFind)
}


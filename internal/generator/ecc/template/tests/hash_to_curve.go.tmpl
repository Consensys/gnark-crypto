func isOnE{{$CurveIndex}}Prime(p {{$CurveTitle}}Affine) bool {

	var A, B {{$CoordType}}

	{{setString "A" .A}}
	{{setString "B" .B}}

	var LHS {{$CoordType}}
	LHS.
		Square(&p.Y).
		Sub(&LHS, &B)

	var RHS {{$CoordType}}
	RHS.
		Square(&p.X).
		Add(&RHS, &A).
		Mul(&RHS, &p.X)

	return LHS.Equal(&RHS)

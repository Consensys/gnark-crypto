func fuzzCofactorOf{{ toUpper .PointName}}(f {{ .CoordType}}) {{ $TJacobian }} {
	var res, jac, a, b, c {{ $TJacobian }}
   	aff := MapToCurve2(&f)
	jac.FromAffine(&aff)
    // [x₀+1]P + ψ([x₀]P) + ψ²([x₀]P) - ψ³([2x₀]P) = [r]P
	a.mulBySeed(&jac)
	b.psi(&a)
	a.AddAssign(&jac)
	res.psi(&b)
	c.Set(&res).
		AddAssign(&b).
		AddAssign(&a)
	res.psi(&res).
		Double(&res).
        SubAssign(&c)
	return res
